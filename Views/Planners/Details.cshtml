@model SacramentMeetingPlanner.Models.Planner

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sacrament Meeting Planner</h4>
    <h3>Estancia Branch</h3>
    <p>@Html.DisplayFor(model => model.Date)</p>
    <hr />
    <dl class="row">        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.President)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.President)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Conducting)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conducting)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OpeningHymn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpeningHymn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Invocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Invocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SacramentHymn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SacramentHymn)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialHymn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialHymn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Speakers)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Member Name</th>
                    <th>Topic</th>
                </tr>
                @foreach (var item in Model.Speakers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MemberName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Topic)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClosingHymn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClosingHymn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Benediction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Benediction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DismissalSong)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DismissalSong)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PlannerID" class="btn btn-primary">Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>
