@model IEnumerable<SacramentMeetingPlanner.Models.Speaker>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Planner.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpeakerID" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.SpeakerID" class="btn btn-warning">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.SpeakerID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
